import * as S from "@effect/schema/Schema";
import Analytics from "@vercel/analytics/astro";
import { SEO } from "astro-seo";
import PostHog from "../components/posthog-analytics.astro";
import SmoothScroll from "../components/smooth-scroll.astro";
import "../styles/global.css";

const Props = S.Struct({
  title: S.String,
  description: S.String,
  image: S.optional(S.String),
  ogType: S.optional(S.String),
});

const {
  title,
  description,
  image = "/assets/images/og.jpg",
  ogType = "website",
} = Astro.props as S.Schema.Type<typeof Props>;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site).toString();
---

<!doctype html>
<html lang="en" data-theme="elysium">
  <head>
    <meta charset="UTF-8" />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL.toString()}
      openGraph={{
        basic: {
          title: title,
          type: ogType,
          image: socialImageURL,
          url: canonicalURL.toString(),
        },
        optional: {
          description: description,
          siteName: "Elysium",
          locale: "en_US",
        },
        image: {
          url: socialImageURL,
          alt: title,
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@ElysiumOSS",
        creator: "@ElysiumOSS",
        title: title,
        description: description,
        image: socialImageURL,
        imageAlt: title,
      }}
      extend={{
        meta: [
          {
            name: "viewport",
            content: "width=device-width, initial-scale=1.0",
          },
          { name: "theme-color", content: "#8B5CF6" },
          { name: "mobile-web-app-capable", content: "yes" },
          { name: "apple-mobile-web-app-capable", content: "yes" },
          {
            name: "apple-mobile-web-app-status-bar-style",
            content: "black-translucent",
          },
          { name: "apple-mobile-web-app-title", content: "Elysium" },
          { name: "application-name", content: "Elysium" },
          { name: "msapplication-TileColor", content: "#8B5CF6" },
          { name: "msapplication-config", content: "/browserconfig.xml" },
          {
            name: "keywords",
            content:
              "elysium, open source, development tools, framework, OSS, purple theme, modern development",
          },
          { name: "author", content: "Elysium OSS" },
          { name: "robots", content: "index, follow" },
          { name: "language", content: "English" },
          { name: "revisit-after", content: "7 days" },
        ],
        link: [
          { rel: "icon", type: "image/svg+xml", href: "/favicon.svg" },
          {
            rel: "icon",
            type: "image/png",
            sizes: "192x192",
            href: "/assets/images/logo-192.png",
          },
          {
            rel: "apple-touch-icon",
            sizes: "180x180",
            href: "/assets/images/logo-192.png",
          },
          { rel: "manifest", href: "/manifest.json" },
        ],
      }}
    />

    <!-- Structured Data (JSON-LD) -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        name: "Elysium",
        description: description,
        url: "https://elysium.tools",
        logo: "https://elysium.tools/favicon.ico",
        sameAs: [
          "https://github.com/ElysiumOSS",
          "https://github.com/ElysiumOSS/elysium",
        ],
        founder: {
          "@type": "Organization",
          name: "Elysium OSS",
        },
        knowsAbout: [
          "Open Source Software",
          "Web Development",
          "Software Engineering",
          "Development Tools",
        ],
      })}
    />

    <!-- Vercel Analytics -->
    <Analytics />

    <!-- PostHog Analytics -->
    <PostHog />

    <!-- Smooth Scrolling -->
    <SmoothScroll />
  </head>
  <body>
    <div class="background-effects">
      <div class="blob blob1"></div>
      <div class="blob blob2"></div>
      <div class="blob blob3"></div>
      <div class="grain"></div>
    </div>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .background-effects {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
    background: #0a0612;
  }

  .blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.4;
    will-change: transform;
  }

  .blob1 {
    width: 800px;
    height: 800px;
    top: -200px;
    left: -200px;
    background: radial-gradient(
      circle,
      rgba(167, 139, 250, 0.4) 0%,
      rgba(139, 92, 246, 0.2) 50%,
      transparent 100%
    );
    animation: move-blob-1 25s ease-in-out infinite alternate;
  }

  .blob2 {
    width: 700px;
    height: 700px;
    bottom: -250px;
    right: -250px;
    background: radial-gradient(
      circle,
      rgba(139, 92, 246, 0.35) 0%,
      rgba(124, 58, 237, 0.2) 50%,
      transparent 100%
    );
    animation: move-blob-2 30s ease-in-out infinite alternate;
  }

  .blob3 {
    width: 600px;
    height: 600px;
    top: 40%;
    right: 10%;
    background: radial-gradient(
      circle,
      rgba(167, 139, 250, 0.3) 0%,
      rgba(139, 92, 246, 0.15) 50%,
      transparent 100%
    );
    animation: move-blob-3 35s ease-in-out infinite alternate;
  }

  @keyframes move-blob-1 {
    0% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(150px, 100px) scale(1.2);
    }
    100% {
      transform: translate(50px, 150px) scale(0.9);
    }
  }

  @keyframes move-blob-2 {
    0% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(-120px, -80px) scale(0.85);
    }
    100% {
      transform: translate(-50px, -120px) scale(1.1);
    }
  }

  @keyframes move-blob-3 {
    0% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(-100px, 80px) scale(1.15);
    }
    66% {
      transform: translate(80px, -60px) scale(0.9);
    }
    100% {
      transform: translate(-50px, 40px) scale(1.05);
    }
  }

  .grain {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 400"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="5" stitchTiles="stitch" seed="2"/><feColorMatrix type="saturate" values="0"/></filter><rect width="100%" height="100%" filter="url(%23noise)" opacity="0.5"/></svg>');
    opacity: 0.08;
    pointer-events: none;
    mix-blend-mode: overlay;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: 1.2;
    font-weight: 600;
  }

  a {
    transition: color 0.3s ease;
  }

  button {
    cursor: pointer;
  }
</style>

<script is:inline src="/sw-register.js"></script>
