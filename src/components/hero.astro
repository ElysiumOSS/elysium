<script>
  import { gsap } from "gsap";
  import { animate, stagger } from "motion";

  // Animate hero elements on load
  const animateElements = document.querySelectorAll('[data-animate="fade-up"]');

  animateElements.forEach((el) => {
    const delay = parseInt(el.getAttribute("data-delay") || "0");

    animate(el as any, { opacity: 1, y: 0 }, {
      duration: 1,
      delay: delay / 1000,
      easing: [0.22, 1, 0.36, 1],
    } as any);
  });

  // Animate title words with stagger
  const titleWords = document.querySelectorAll(".title-word");
  animate(Array.from(titleWords) as any, { opacity: 1, y: 0 }, {
    duration: 0.8,
    delay: stagger(0.1),
    easing: [0.22, 1, 0.36, 1],
  } as any);

  // Parallax effect for floating elements
  const floatItems = document.querySelectorAll(".float-item");

  window.addEventListener("mousemove", (e) => {
    const { clientX, clientY } = e;
    const centerX = window.innerWidth / 2;
    const centerY = window.innerHeight / 2;

    floatItems.forEach((item) => {
      const speed = parseFloat(item.getAttribute("data-speed") || "0.5");
      const x = (clientX - centerX) * speed * 0.02;
      const y = (clientY - centerY) * speed * 0.02;

      gsap.to(item, {
        x,
        y,
        duration: 1.5,
        ease: "power2.out",
      });
    });
  });

  // Scroll-based parallax for floating elements
  if (typeof window !== "undefined") {
    const heroSection = document.querySelector(".hero-section");

    const handleScroll = () => {
      const scrollY = window.scrollY;
      const heroHeight = heroSection?.clientHeight || 0;

      if (scrollY < heroHeight) {
        floatItems.forEach((item) => {
          const speed = parseFloat(item.getAttribute("data-speed") || "0.5");
          gsap.to(item, {
            y: scrollY * speed,
            duration: 0.5,
            ease: "power1.out",
          });
        });
      }
    };

    window.addEventListener("scroll", handleScroll, { passive: true });
  }

  // Fade out scroll indicator when scrolling
  const scrollIndicator = document.querySelector(".scroll-indicator");
  if (scrollIndicator) {
    window.addEventListener("scroll", () => {
      const opacity = Math.max(0, 1 - window.scrollY / 300);
      gsap.to(scrollIndicator, {
        opacity,
        duration: 0.3,
      });
    });
  }
</script>
