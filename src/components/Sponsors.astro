---
const sponsorPlatforms = [
  {
    name: "GitHub Sponsors",
    username: "@WomB0ComB0",
    url: "https://github.com/sponsors/WomB0ComB0",
    icon: "üíú",
    color: "primary",
    description:
      "Flexible monthly or one-time contributions directly through GitHub.",
  },
  {
    name: "Open Collective",
    username: "@mike-odnis",
    url: "https://opencollective.com/mike-odnis",
    icon: "üåê",
    color: "info",
    description: "Transparent funding with public expense tracking.",
  },
  {
    name: "Ko-fi",
    username: "@Y8Y77AJEA",
    url: "https://ko-fi.com/Y8Y77AJEA",
    icon: "‚òï",
    color: "warning",
    description: "Quick one-time donations to fuel my work.",
  },
  {
    name: "Buy Me a Coffee",
    username: "@mikeodnis",
    url: "https://www.buymeacoffee.com/mikeodnis",
    icon: "ü´ñ",
    color: "accent",
    description: "Easy coffee-sized donations to show support.",
  },
] as const;
---

<section class="sponsors" id="sponsors">
  <div class="container">
    <div class="section-header">
      <h2>Support the Vision</h2>
      <p class="section-subtitle">
        Help sustain the creation of open-source tools and libraries. Your
        support fuels continuous development and innovation.
      </p>
    </div>

    <div class="sponsors-grid">
      {
        sponsorPlatforms.map((platform) => (
          <a
            href={platform.url}
            class="sponsor-card"
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="card-glow" />
            <div class="card-inner">
              <div class="sponsor-icon">{platform.icon}</div>
              <div class="sponsor-content">
                <h3>{platform.name}</h3>
                <p class="sponsor-username">{platform.username}</p>
                <p class="sponsor-description">{platform.description}</p>
              </div>
              <div class="sponsor-arrow">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <line x1="5" y1="12" x2="19" y2="12" />
                  <polyline points="12 5 19 12 12 19" />
                </svg>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <div class="sponsors-footer">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        class="heart-icon"
      >
        <path
          d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"
        ></path>
      </svg>
      <p>
        Every contribution, no matter the size, makes a meaningful difference.
        Thank you for believing in this journey. üå∏
      </p>
    </div>
  </div>
</section>

<style>
  .sponsors {
    padding: 6rem 1rem;
    background: linear-gradient(
      180deg,
      rgba(15, 10, 26, 0.3) 0%,
      rgba(15, 10, 26, 0.6) 100%
    );
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(167, 139, 250, 0.1);
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-primary);
    margin-bottom: 1rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
  }

  .sponsors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .sponsor-card {
    position: relative;
    background: rgba(15, 10, 26, 0.6);
    border: 1px solid rgba(167, 139, 250, 0.2);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    backdrop-filter: blur(20px);
    text-decoration: none;
  }

  .card-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(168, 85, 247, 0.3) 0%,
      rgba(236, 72, 153, 0.2) 50%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .sponsor-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: var(--color-primary);
    box-shadow: 0 20px 40px rgba(167, 139, 250, 0.3);
  }

  .sponsor-card:hover .card-glow {
    opacity: 1;
  }

  .card-inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .sponsor-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.3));
  }

  .sponsor-content {
    flex-grow: 1;
  }

  .sponsor-card h3 {
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .sponsor-username {
    color: var(--color-primary);
    font-size: 0.95rem;
    margin-bottom: 1rem;
    font-family: "Courier New", monospace;
    font-weight: 500;
  }

  .sponsor-description {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .sponsor-arrow {
    color: var(--color-primary);
    opacity: 0.6;
    transition: all 0.3s ease;
    align-self: flex-end;
  }

  .sponsor-card:hover .sponsor-arrow {
    opacity: 1;
    transform: translateX(6px);
  }

  .sponsors-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    text-align: center;
    padding: 2rem;
    background: rgba(167, 139, 250, 0.05);
    border: 1px solid rgba(167, 139, 250, 0.1);
    border-radius: 0.75rem;
  }

  .heart-icon {
    flex-shrink: 0;
    stroke: var(--color-primary);
  }

  .sponsors-footer p {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.7;
    max-width: 700px;
    margin: 0;
  }

  @media (max-width: 768px) {
    .sponsors {
      padding: 4rem 1rem;
    }

    .section-header {
      margin-bottom: 3rem;
    }

    .sponsors-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .sponsor-card {
      padding: 1.5rem;
    }

    .sponsor-icon {
      font-size: 2.5rem;
    }

    .sponsor-card h3 {
      font-size: 1.3rem;
    }

    .sponsors-footer {
      flex-direction: column;
      padding: 1.5rem;
    }
  }
</style>
